<h1>Welcome to the (Admin) Location Page</h1>
<p>Here is the list of Location</p>
<p>
  <%= link_to 'New', new_admin_location_path %>
</p>
<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  <% @locations.where('parent_id is null').each do |a| %>
    <tr>
      <td>
        <%= a.name %>
      </td>
      <td>
        <%= link_to 'Show', admin_location_path(a) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_admin_location_path(a) %>
      </td>
      <td>
        <%= link_to 'Delete', admin_location_path(a), method: :delete, data: {confirm: "Delete #{a.name} for sure???"} %>
      </td>
    </tr>
    <% a.children.order(:name).each do |b| %>
      <tr>
        <td>
          >
        </td>
        <td>
          <%= b.name %>
        </td>
        <td>
          <%= link_to 'Show', admin_location_path(b) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_admin_location_path(b) %>
        </td>
        <td>
          <%= link_to 'Delete', admin_location_path(b), method: :delete, data: {confirm: "Delete #{b.name} for sure???"} %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>