<%= form_with(model: [ :admin, reagent ], local: true) do |form| %>
  <% if reagent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reagent.errors.count, "error") %> prohibited this reagent from being saved:</h2>
      <ul>
        <%reagent.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row justify-content-center">
      <%= form.label(:name, 'Reagent name: ') %>
      <%= form.text_field(:name) %> 
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center">
    <%= form.label "Rarity: " %>
    <%= form.select :rarity, ['Common', 'Uncommon', 'Rare', 'Epic', 'Legendary'],{ class: "custom-select" } %>     
    </div>
  </div>
 
 
  <div class="container">
    <div class="row justify-content-center">
      <%= form.label 'Behemoth:' %>
      <%= form.collection_select :behemoth_id, Behemoth.all.order(:name), :id, :name, {},{ class: "custom-select" } %> 
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="container">
    <div class="row justify-content-center"> 
      <%= link_to 'Back',admin_reagents_path %>
    </div>
  </div>
  
<% end %>

