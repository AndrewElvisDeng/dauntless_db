<!DOCTYPE html>
<html>
  <head>
    <title>Dauntless Database</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="index_page">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #336699;">
        <a class="navbar-brand" href="/"> Dauntless Database</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <%= link_to ' Behemoths  ', behemoths_path, class: "nav-item nav-link" %> 
            <%= link_to ' Armor  ', armors_path, class: "nav-item nav-link" %> 
          </div>
        </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
